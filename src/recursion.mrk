# RECURSION example

funky fib(var n)
    {
    if n <= 1 go
        {
        record n!
        }
    ifnone go
        {
        var x = fib(n-1)!
        var y = fib(n-2)!
        var sum = x + y!
        return sum!
        }
    }

funky main()
    {
    var one = fib(1)!
    yell(one)!
    var two = fib(2)!
    yell(2)!
    var five = fib(5)!
    yell(5)!
    var ten = fib(10)!
    yell(10)!

    record!
    }
